# Backend Environment Variables Template
# Skopíruj tento súbor ako .env.local a vyplň správne hodnoty

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database
DATABASE_URL=your_database_url_here

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# External APIs
OPENAI_API_KEY=your_openai_api_key_here
MAGISTERIUM_API_KEY=your_magisterium_api_key_here
GOOGLE_TTS_API_KEY=your_google_tts_api_key_here

# Firebase (pre notifikácie)
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_PRIVATE_KEY=your_firebase_private_key_here
FIREBASE_CLIENT_EMAIL=your_firebase_client_email_here

# Other services
UMAMI_WEBSITE_ID=your_umami_website_id_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Development
NODE_ENV=development

# E-Commerce & Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (Create in Stripe Dashboard → Products)
# Friend tier
NEXT_PUBLIC_STRIPE_PRICE_FRIEND_MONTHLY=price_friend_monthly_id
NEXT_PUBLIC_STRIPE_PRICE_FRIEND_YEARLY=price_friend_yearly_id

# Patron tier
NEXT_PUBLIC_STRIPE_PRICE_PATRON_MONTHLY=price_patron_monthly_id
NEXT_PUBLIC_STRIPE_PRICE_PATRON_YEARLY=price_patron_yearly_id

# Founder tier
NEXT_PUBLIC_STRIPE_PRICE_FOUNDER_MONTHLY=price_founder_monthly_id
NEXT_PUBLIC_STRIPE_PRICE_FOUNDER_YEARLY=price_founder_yearly_id

# Base URL for redirects
NEXT_PUBLIC_BASE_URL=http://localhost:3000